{% if owner is not defined %}
    {% set owner = 'bolt' %}
{% endif %}

{% if repo is not defined %}
    {% set repo = 'core' %}
{% endif %}

<div class="row contributors">
    <div class="col-12 my-4">
        <div class="row justify-content-center">
            <div class="col-auto">
                <h3 class="contributors1">Contributors</h3>
            </div>
        </div>
    </div>
    <div class="d-flex flex-wrap justify-content-center">
    {% for contributor in github_contributors(owner, repo) %}
        <div class="contributor blok m-2">
            <img class="avatar"  src="{{ contributor.avatar_url }}" alt="{{ contributor.login }} profile image" alt="avatar">
            <p class="name mw-100"><a href="{{ contributor.html_url }}">{{ contributor.login }}</a></p>
        </div>
    {% endfor %}
    </div>
</div>
