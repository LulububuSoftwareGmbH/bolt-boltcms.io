{% extends 'partials/_master.twig' %}

{% block main_container %}
    <div class="detail-page">
        {{ record|allow_twig }}
        <h1 class="mt-5">{{ record.title }}</h1>

        {% if record.image is not empty %}
            <img class="newsimage w-100 rounded" src="{{ record.image|thumbnail(1280, 720) }}" alt="{{ record.image.alt|default }}">
        {% endif %}

        <p>Published by {{ record.author }} on {{ record.publishedAt|date('d-m-Y') }}</p>

        {{ record.content }}
    </div>
{% endblock main_container %}
