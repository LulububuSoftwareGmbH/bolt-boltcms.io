<section id="{{ block.slug }}">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 p-3 p-lg-5">
                <img class="img-fluid {{ block.image.title|default() }}" src="{{ thumbnail(block.image, 450, 450) }}" alt="">
            </div>
            <div class="col-lg-7 p-6">
                {% include 'partials/_title.twig' %}
                {{ block.content }}
            </div>
        </div>
    </div>
</section>
