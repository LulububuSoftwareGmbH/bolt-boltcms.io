{% extends 'partials/_master.twig' %}

{% block content %}

    <div class="container">
        <div class="row ">
            <div class="col-lg-8 order-lg-1 p-4">
                <h1>The latest Bolt news</h1>
            </div>
        </div>
    </div>


    {% for record in records %}

        <div class="container">
            <div class="row align-items-center justify-content-md-center">
                <div class="col-lg-8 order-lg-1 p-4">
                    <h1>{{ record|title }}</h1>

                    {% include "partials/_record_footer.twig" %}

                    <p>{{ record|excerpt(300) }}</p>

                    <a href="{{ record|link }}" class="btn btn-primary">Read more</a>
                </div>
                <div class="col-lg-4 order-lg-1">
                    <img src="{{ record|thumbnail(350, 250, fit='crop') }}">
                </div>

            </div>
        </div>

    {% endfor %}

{% endblock content %}