{% extends 'partials/_master.twig' %}

{% block content %}

        <div class="container">
            <div class="row align-items-center justify-content-md-center">
                <div class="col-lg-10 order-lg-1 pt-3 pl-3 pr-3 pt-lg-5 pl-lg-5 pr-lg-5">
                    <h1>{{ record|title }}</h1>
                    {% include "partials/_record_footer.twig" %}
                </div>
                {% if record|image %}
                <div class="col-lg-12 order-lg-1 p-3 pt-lg-5">
                    <img src="{{ record|thumbnail(1200) }}">
                </div>
                {% endif %}
                <div class="col-lg-10 order-lg-1 p-3 p-lg-5">
                    {% with { 'record': record, 'exclude': [record|image.fieldname|default()] } %}
                        {{ block('sub_fields', 'helpers/_fields.twig') }}
                    {% endwith %}
                </div>
            </div>
        </div>

{% endblock content %}